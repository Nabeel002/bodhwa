
    <div class="container w-container">
      <div class="flex"><img src="{{ 'bodh-logo.png' | asset_url }}" loading="lazy" width="54" alt="">
        <h1 class="gifting-heading">{{ section.settings.heading }}</h1>
      </div>
      <div class="nam-wrapper">
        <div class="hr left"></div>
        <div class="text-block-23">{{ section.settings.subtitle }}</div>
        <div class="hr"></div>
      </div>
      <div class="gifting-hero-image">{%- if section.settings.hero_image == nil -%}<img class="image-max-cover" src="{{ 'img_8543_1920x.jpg' | asset_url }}" alt="" sizes="91vw" loading="lazy" srcset="{{ 'img_8543_1920x-p-500.jpg' | asset_url }} 500w, {{ 'img_8543_1920x-p-800.jpg' | asset_url }} 800w, {{ 'img_8543_1920x-p-1080.jpg' | asset_url }} 1080w, {{ 'img_8543_1920x-p-1600.jpg' | asset_url }} 1600w, {{ 'img_8543_1920x.jpg' | asset_url }} 1920w">{%- else -%}<img class="image-max-cover" src="{{ section.settings.hero_image.src | img_url: 'master' }}" alt="{{ section.settings.hero_image.alt | escape }}" loading="lazy" srcset="{{ section.settings.hero_image | img_url: '1920x' }} 1920w,{{ section.settings.hero_image | img_url: '1600x' }} 1600w,{{ section.settings.hero_image | img_url: '1366x' }} 1366w,{{ section.settings.hero_image | img_url: '1024x' }} 1024w,{{ section.settings.hero_image | img_url: '768x' }} 768w,{{ section.settings.hero_image | img_url: '640x' }} 640w">{%- endif -%}</div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","wf-section");</script>
        
{% schema %}
{
  "name": "section-gifting",
  "tag": "div",
  "class": "wf-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Gifting Guide"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle",
      "default": " Your crystal gifting guide "
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "hero-image"
    }
  ]
}
{% endschema %}