{% schema %}
{
  "name": "section-festive-content",
  "tag": "div",
  "class": "wf-section",
  "settings": [
    {
      "type": "text",
      "id": "category_heading",
      "label": "Category-heading",
      "default": "BEST SELLERS"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
